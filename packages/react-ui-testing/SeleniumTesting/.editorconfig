# http://editorconfig.org
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = crlf
charset = utf-8-bom
trim_trailing_whitespace = true
insert_final_newline = true

[*.{cs,cshtml}]
insert_final_newline = false

[*.{js,jsx,json}]
charset = utf-8
end_of_line = lf

[*.{xml,md,txt}]
indent_style = ignore
trim_trailing_whitespace = false
insert_final_newline = false
charset = ignore

